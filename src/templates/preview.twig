<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title></title>
        <style>
            {{ source('seomate/Preview.css') }}
        </style>
    </head>
    <body>

        {% set entry = entry ?? category ?? product ?? element ?? null %}

        {% if entry and entry.url|default %}

            {% set entry = entry|merge({
                url: entry.url|split('?')|first
            }) %}

            <div class="Google">
                <h2><div class="l-wrap"><span>G</span><span>o</span><span>o</span><span>g</span><span>l</span><span>e</span></div></h2>
                <div class="l-wrap">
                    {{ include('seomate/_previews/google/default.twig') }}
                </div>
            </div>

            <div class="Facebook">
                <h2><div class="l-wrap">Facebook</div></h2>
                <div class="l-wrap">
                    {{ include('seomate/_previews/facebook.twig') }}
                </div>
            </div>

            <div class="Twitter">
                <h2><div class="l-wrap">X (Twitter)</div></h2>
                <div class="l-wrap">
                    {{ include('seomate/_previews/twitter.twig') }}
                </div>
            </div>

            <div class="LinkedIn">
                <h2><div class="l-wrap">LinkedIn</div></h2>
                <div class="l-wrap">
                    {{ include('seomate/_previews/linkedin.twig') }}
                </div>
            </div>

        {% endif %}

    </body>
</html>
