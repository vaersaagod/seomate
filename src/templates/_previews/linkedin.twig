{% set image = meta['og:image'] ?? meta.image ?? null %}
{% set title = meta['og:title'] ?? meta.title ?? '' %}

<div class="LinkedIn__context">
    <div class="LinkedIn__context-inner">
        <div class="LinkedIn__post">
            <div class="LinkedIn__post-meta">
                <div class="LinkedIn__post-avatar"></div>
                <div class="LinkedIn__post-metatext">
                    <span class="LinkedIn__post-meta-name">
                        <span>Jane Doe</span><span aria-hidden="true"> • 1st</span>
                    </span>
                    <span class="LinkedIn__post-meta-job">Hedge Fund & Crypto Journalist | Content Writer</span>
                    <span class="LinkedIn__post-meta-date"><span>1w<span aria-hidden="true"> • </span></span><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" data-supported-dps="16x16" fill="currentColor" class="mercado-match" width="16" height="16" focusable="false" aria-hidden="false">
      <path d="M8 1a7 7 0 107 7 7 7 0 00-7-7zM3 8a5 5 0 011-3l.55.55A1.5 1.5 0 015 6.62v1.07a.75.75 0 00.22.53l.56.56a.75.75 0 00.53.22H7v.69a.75.75 0 00.22.53l.56.56a.75.75 0 01.22.53V13a5 5 0 01-5-5zm6.24 4.83l2-2.46a.75.75 0 00.09-.8l-.58-1.16A.76.76 0 0010 8H7v-.19a.51.51 0 01.28-.45l.38-.19a.74.74 0 01.68 0L9 7.5l.38-.7a1 1 0 00.12-.48v-.85a.78.78 0 01.21-.53l1.07-1.09a5 5 0 01-1.54 9z"></path>
    </svg></span>
                </div>
            </div>
            <div class="LinkedIn__post-text">
                <span>Check out this post:&nbsp;</span><span class="LinkedIn__post-url">{{ entry.url }}</span>
            </div>
        </div>
        <div class="LinkedIn__card">
            {% if image %}
                <div class="LinkedIn__card-image">
                    {% if image.getUrl is defined %}
                        <img src="{{ image.getUrl({ width: 1200, height: 630, mode: 'crop' }) }}" alt="">
                    {% else %}
                        <img src="{{ image }}" alt="">
                    {% endif %}
                </div>
            {% endif %}
            <div class="LinkedIn__card-text">
                <div class="LinkedIn__card-title">{{ title }}</div>
                <div class="LinkedIn__card-domain">
                    {{ siteUrl | replace({'http://': '', 'https://': '', '//': ''})|trim('/') }}
                </div>
            </div>
        </div>
    </div>
</div>
